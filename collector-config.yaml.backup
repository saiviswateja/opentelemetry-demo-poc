receivers:
  otlp:
    protocols:
      grpc:
        endpoint: 0.0.0.0:4317  # Add this
      http:
        endpoint: 0.0.0.0:4318  # Add this

exporters:
  prometheus:
    endpoint: "0.0.0.0:9464"   # Prometheus scrape endpoint
  debug:
    verbosity: detailed
  zipkin:
    endpoint: "http://zipkin:9411/api/v2/spans"
  otlp:
    endpoint: tempo:4317
    tls:
      insecure: true

service:
  pipelines:
    metrics:
      receivers: [otlp]
      exporters: [prometheus, debug]
    logs:
      receivers: [otlp]
      exporters: [debug]
    traces:
      receivers: [otlp]
      exporters: [zipkin, debug,otlp]
